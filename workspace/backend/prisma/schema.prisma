// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  dataID     Int      @default(autoincrement())
  id         String   @id
  name       String
  birthday   Int
  email      String?
  phone      String
  flag       Int      @default(0)
  registerID String?
  password   String
  token      String?
  createdAt  DateTime @default(now())
  updatedAt  DateTime @default(now())
  schools    School[]
}

model School {
  dataID    Int      @default(autoincrement())
  id        String   @id
  name      String
  address   String
  phone     String?
  website   String?
  email     String?
  flag      Int      @default(0)
  createdAt DateTime @default(now())
  updatedAt DateTime @default(now())
  users     User[]
}
